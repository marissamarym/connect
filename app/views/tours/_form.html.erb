<%= form_for @tour, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :guide_percentage, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :guide_percentage, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :price, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :price, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :canceled, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box :canceled, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :notes, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :notes, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :scheduled_time, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :scheduled_time, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :paid, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box :paid, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :private_notes, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :private_notes, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  tours_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
