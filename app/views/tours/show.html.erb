<%- model_class = Tour -%>
<div class="page-header">
  <h1><%=t '.title', :default => Tour %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:guide_percentage) %></dt>
      <dd><pre class="prettyprint"><%= @tour.guide_percentage %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:price) %></dt>
      <dd><pre class="prettyprint"><%= @tour.price %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:canceled) %></dt>
      <dd><pre class="prettyprint"><%= @tour.canceled %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:notes) %></dt>
      <dd><pre class="prettyprint"><%= @tour.notes %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:scheduled_time) %></dt>
      <dd><pre class="prettyprint"><%= @tour.scheduled_time %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:paid) %></dt>
      <dd><pre class="prettyprint"><%= @tour.paid %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:private_notes) %></dt>
      <dd><pre class="prettyprint"><%= @tour.private_notes %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              tours_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_tour_path(@tour), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              tour_path(@tour),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

