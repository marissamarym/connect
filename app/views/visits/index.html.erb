<h1>Listing visits</h1>

<table>
  <thead>
    <tr>
      <th>Start time</th>
      <th>End time</th>
      <th>Type</th>
      <th>Notes</th>
      <th>Prospie</th>
      <th>School</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @visits.each do |visit| %>
      <tr>
        <td><%= visit.start_time %></td>
        <td><%= visit.end_time %></td>
        <td><%= visit.type %></td>
        <td><%= visit.notes %></td>
        <td><%= visit.prospie %></td>
        <td><%= visit.school %></td>
        <td><%= link_to 'Show', visit %></td>
        <td><%= link_to 'Edit', edit_visit_path(visit) %></td>
        <td><%= link_to 'Destroy', visit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

