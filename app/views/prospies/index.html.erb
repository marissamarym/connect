<h1>Listing prospies</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prospies.each do |prospy| %>
      <tr>
        <td><%= prospy.user %></td>
        <td><%= link_to 'Show', prospy %></td>
        <td><%= link_to 'Edit', edit_prospy_path(prospy) %></td>
        <td><%= link_to 'Destroy', prospy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Prospie', new_prospy_path %>
