<%- model_class = Guide -%>
<div class="page-header">
  <h1><%=t '.title', :default => Guide %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:major) %></dt>
      <dd><pre class="prettyprint"><%= @guide.major %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:interests) %></dt>
      <dd><pre class="prettyprint"><%= @guide.interests %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:hometown) %></dt>
      <dd><pre class="prettyprint"><%= @guide.hometown %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:blurb) %></dt>
      <dd><pre class="prettyprint"><%= @guide.blurb %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:year) %></dt>
      <dd><pre class="prettyprint"><%= @guide.year %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:payment_id) %></dt>
      <dd><pre class="prettyprint"><%= @guide.payment_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:payment_details) %></dt>
      <dd><pre class="prettyprint"><%= @guide.payment_details %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              guides_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_guide_path(@guide), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              guide_path(@guide),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

