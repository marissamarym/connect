<h1>Listing guides</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>School</th>
      <th>Major</th>
      <th>Interests</th>
      <th>Hometown</th>
      <th>Blurb</th>
      <th>Year</th>
      <th>Payment</th>
      <th>Payment details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guides.each do |guide| %>
      <tr>
        <td><%= guide.user %></td>
        <td><%= guide.school %></td>
        <td><%= guide.major %></td>
        <td><%= guide.interests %></td>
        <td><%= guide.hometown %></td>
        <td><%= guide.blurb %></td>
        <td><%= guide.year %></td>
        <td><%= guide.payment_id %></td>
        <td><%= guide.payment_details %></td>
        <td><%= link_to 'Show', guide %></td>
        <td><%= link_to 'Edit', edit_guide_path(guide) %></td>
        <td><%= link_to 'Destroy', guide, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Guide', new_guide_path %>
