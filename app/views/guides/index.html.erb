<%- model_class = Guide -%>
<div class="page-header">
  <h1><%=t '.title', :default => Guide %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:major) %></th>
      <th><%= model_class.human_attribute_name(:interests) %></th>
      <th><%= model_class.human_attribute_name(:hometown) %></th>
      <th><%= model_class.human_attribute_name(:blurb) %></th>
      <th><%= model_class.human_attribute_name(:year) %></th>
      <th><%= model_class.human_attribute_name(:payment_id) %></th>
      <th><%= model_class.human_attribute_name(:payment_details) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @guides.each do |guide| %>
      <tr>
        <td><%= guide.id %></td>
        <td><%= guide.major %></td>
        <td><%= guide.interests %></td>
        <td><%= guide.hometown %></td>
        <td><%= guide.blurb %></td>
        <td><%= guide.year %></td>
        <td><%= guide.payment_id %></td>
        <td><%= guide.payment_details %></td>
        <td><%=l guide.created_at, format: :long %></td>
        <td>
          <%= link_to guide_path(guide), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to guide_path(guide), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_guide_path,
            :class => 'btn btn-primary' %>
