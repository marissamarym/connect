<%- model_class = Guide -%>


<div class="page-header" style="text-align:center;">
  <h1>Choose a guide <i class="fa fa-group" style="color:#222;"></i></h1>
</div>
  <% @guides.each_slice(4) do |slice| %>   
  <row>
      <% slice.each do |guide| %>

      <div class="col-md-3">
        <div class="well well-lg">
          <p style="text-align:center;"><i class="fa fa-camera fa-5x" style="color:gray;"></i></p>
          <p><b><%= model_class.human_attribute_name(:major) %></b> <%= guide.major %></p>
          <p><b><%= model_class.human_attribute_name(:interests) %></b> <%= guide.interests %></p>
          <p><b><%= model_class.human_attribute_name(:hometown) %></b> <%= guide.hometown %></p>
          <p><b><%= model_class.human_attribute_name(:blurb) %></b> <%= guide.blurb %></p>
          <p><b><%= model_class.human_attribute_name(:year) %></b> <%= guide.year %></p>
          <hr>
          <p><a class="btn btn-primary center-block">Select</a></p>
      </div>
      </div>
      <% end %>
  </row>
  <% end %>
